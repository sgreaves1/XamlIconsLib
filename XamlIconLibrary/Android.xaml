<UserControl x:Class="XamlIconLibrary.Android"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XamlIconLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="Root">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel ZIndex="1" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label Content="{Binding ElementName=Root, Path=Source}" FontSize="10" Margin="0" Padding="0" Visibility="{Binding ElementName=Root, Path=ShowCredits, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>


        <Path 
                Grid.Row="0" Grid.RowSpan="3" 
              Grid.Column="0" Grid.ColumnSpan="2"
              Fill="{Binding ElementName=Root, Path=Foreground}" 
              Width="{Binding ElementName=Root, Path=ActualWidth}"
              Height="{Binding ElementName=Root, Path=ActualHeight}"
              Stretch="Fill" 
              Data="F1 M24,24z M0,0z M6,18C6,18.55,6.45,19,7,19L8,19 8,22.5C8,23.33 8.67,24 9.5,24 10.33,24 11,23.33 11,22.5L11,19 13,19 13,22.5C13,23.33 13.67,24 14.5,24 15.33,24 16,23.33 16,22.5L16,19 17,19C17.55,19,18,18.55,18,18L18,8 6,8 6,18z M3.5,8C2.67,8,2,8.67,2,9.5L2,16.5C2,17.33 2.67,18 3.5,18 4.33,18 5,17.33 5,16.5L5,9.5C5,8.67,4.33,8,3.5,8z M20.5,8C19.67,8,19,8.67,19,9.5L19,16.5C19,17.33 19.67,18 20.5,18 21.33,18 22,17.33 22,16.5L22,9.5C22,8.67,21.33,8,20.5,8z M15.53,2.16L16.83,0.86C17.03,0.66 17.03,0.35 16.83,0.15 16.63,-0.0499999999999999 16.32,-0.0499999999999999 16.12,0.15L14.64,1.63C13.85,1.23 12.95,1 12,1 11.04,1 10.14,1.23 9.34,1.63L7.85,0.15C7.65,-0.05 7.34,-0.05 7.14,0.15 6.94,0.35 6.94,0.66 7.14,0.86L8.45,2.17C6.97,3.26,6,5.01,6,7L18,7C18,5.01,17.03,3.25,15.53,2.16z M10,5L9,5 9,4 10,4 10,5z M15,5L14,5 14,4 15,4 15,5z"
              Stroke="{Binding ElementName=Root, Path=IconBorderColor}"
              StrokeThickness="{Binding ElementName=Root, Path=IconBorderThickness}"
              />

        <StackPanel  ZIndex="1" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Label  Content="{Binding ElementName=Root, Path=Author}" FontSize="10" Margin="0" Padding="0" Visibility="{Binding ElementName=Root, Path=ShowCredits, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
